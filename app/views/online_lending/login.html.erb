<%= content_for :title do %>
	<title>Login Page</title>
<% end %>

<h1>Login</h1>
<% if @message %>
	<p><%= @message %></p>
<% elsif @error %>
	<div class="alert alert-danger"><%= @error %></div>
<% end %>
<%= simple_form_for(:session, url: session_path) do |f| %>
	<p><%= f.input :email, label: "Email:" %></p>
	<p><%= f.input :password, label: "Password:" %></p>
	<p><%= f.button :submit, 'Login', class: "btn btn-primary" %></p>
<% end %>
<%= link_to 'Click here to register', online_lending_register_path %>